---
import Navigation from './Navigation.astro';
---

<!-- Head -->
<header class=" bg-gradient-head-green-light bg-center bg-cover">
	
	<Navigation />

	<!-- Container -->
	<div class=" mr-2 ml-2 sm:mr-8 sm:ml-8 md:mr-16 md:ml-mr-16 lg:mr-32 lg:ml-32 xl:mr-52 xl:ml-52">

		<!-- Head - Content -->
		<div class=" relative flex flex-col pt-32 pb-32 lg:pt-48 lg:pb-48 ">

			<div class=" z-10 relative flex flex-row justify-center pt-4 pb-4 lg:pr-40 lg:pl-24">
				<h2 class=" text-center uppercase text-6xl xl:text-7xl font-bold ">Mon portfolio</h2>
				<h3 class=" absolute text-center text-4xl lg:text-5xl xl:text-6xl z-10 font-light bottom-1 right-12 lg:right-48 lg:top-10 xl:right-72 font-ephesis text-moutarde-light drop-shadow-xl">Mathilde Decoux</h3>
			</div>

			<p class=" z-10 px-10 lg:px-40 text-center text-lg leading-normal">Je suis <span class=" font-bold">Mathilde Decoux</span>, étudiante en communication multimédia, graphiste et photographe basé en <span class=" italic font-medium">France.</span></p>

			<div class=" absolute invisible md:visible h-64 opacity-60 right-24 top-16 lg:top-32 xl:right-40">
				<img class=" object-cover h-full" src="./img-form-illustration.png" alt="">
			</div>

		</div>
	</div>

</header>